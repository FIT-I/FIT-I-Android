<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="46dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/profilebackground" />

            <LinearLayout
                android:layout_width="351dp"
                android:layout_height="61dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/review_name_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="박윤빈" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/review_date_item"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="2023.1.1" />

                    <ImageView
                        android:id="@+id/or"
                        android:layout_width="14dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/or" />

                    <ImageView
                        android:id="@+id/star"
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/star" />

                    <TextView
                        android:id="@+id/star_item"
                        android:layout_width="286dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text="4.5" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/review_context_item"
            android:layout_width="178dp"
            android:layout_height="34dp"
            android:autoSizePresetSizes="@array/autosize_text_sizes"
            android:text="친절한 지도 감사합니다:)" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/profileperson"
        tools:layout_editor_absoluteY="80dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>