<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/review_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile" />

        <LinearLayout
            android:id="@+id/ll_review2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/review_im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="김동현"
                android:textColor="@color/main"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="6.57dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/img_star" />

                <TextView
                    android:id="@+id/review_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.3"
                    android:textColor="@color/main"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="."
                    android:textColor="@color/main"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/review_uni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="숭실대학교"
                    android:textColor="@color/main"
                    android:textSize="12sp" />
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="재학"
                    android:textColor="@color/main"
                    android:textSize="12sp" />


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/review_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:text="후기 작성하기"
            android:textColor="@color/main"
            android:textSize="10sp" />

        <ImageView

            android:layout_width="4dp"
            android:layout_height="6.95dp"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_next" />


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_next_review_write"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/ll_review"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D9D9D9"/>


</androidx.constraintlayout.widget.ConstraintLayout>