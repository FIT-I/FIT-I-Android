<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/match_request_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/main"
        android:text="@string/match_request"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/heartbtn_border" />

    <ImageButton
        android:id="@+id/heart_btn"
        android:layout_width="17.79dp"
        android:layout_height="16.47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="15.53dp"
        android:background="@drawable/round_button"
        android:padding="0sp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/heartbtn_border"
        app:layout_constraintStart_toStartOf="@+id/heartbtn_border"
        app:srcCompat="@drawable/ic_heart"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/heartbtn_border"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_button_border" />

    <ImageView
        android:id="@+id/background_photo"
        android:layout_width="wrap_content"
        android:layout_height="191dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_background" />

    <TextView
        android:id="@+id/university_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="2.36dp"
        android:text="숭실대학교 재학"
        android:textSize="9.5sp"
        app:layout_constraintStart_toEndOf="@+id/dot_or3"
        app:layout_constraintTop_toBottomOf="@+id/trainer_grade" />

    <ImageView
        android:id="@+id/trainer_grade"
        android:layout_width="51dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainer_profile"
        app:srcCompat="@drawable/img_gold" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="20dp"
        android:layout_height="14dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="2dp"
        android:text="1km"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainer_name" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="6.57dp"
        android:layout_height="6.61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6.4dp"
        app:layout_constraintStart_toEndOf="@+id/dot_or2"
        app:layout_constraintTop_toBottomOf="@+id/trainer_name"
        app:srcCompat="@drawable/ic_star" />

    <TextView
        android:id="@+id/trainer_star"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3.43dp"
        android:layout_marginTop="2dp"
        android:text="4.3"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/trainer_name" />

    <ImageView
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="127dp"
            android:layout_marginTop="194dp"
            android:layout_marginEnd="263dp"
            android:layout_marginBottom="647dp"
            app:srcCompat="@drawable/ic_dot" />

    <TextView
        android:id="@+id/trainer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:text="김동현"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainer_profile" />

    <ImageView
        android:id="@+id/trainer_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="290dp"
        android:layout_marginBottom="-35dp"
        app:layout_constraintBottom_toBottomOf="@+id/background_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/img_trainerprofile" />

    <TextView
            android:id="@+id/dot_or"
            android:layout_width="3dp"
            android:layout_height="12dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="254dp"
            android:layout_marginEnd="333dp"
            android:layout_marginBottom="578dp"
            android:text="."
            android:textSize="10sp" />

    <TextView
        android:id="@+id/dot_or2"
        android:layout_width="3dp"
        android:layout_height="12dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:text="."
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/distance"
        app:layout_constraintTop_toBottomOf="@+id/trainer_name" />

    <TextView
        android:id="@+id/dot_or3"
        android:layout_width="3dp"
        android:layout_height="12dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="2dp"
        android:text="."
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/trainer_star"
        app:layout_constraintTop_toBottomOf="@+id/trainer_name" />

    <TextView
        android:id="@+id/manage_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관리 비용\n\n1시간\t\t\t\t\t\t\t\t20000원"
        android:textSize="15dp"
        android:background="#F8F8F8"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="314dp" />


</androidx.constraintlayout.widget.ConstraintLayout>