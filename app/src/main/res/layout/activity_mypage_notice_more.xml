<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.mypage.notice.MypageNoticeMoreActivity">


    <ImageButton
        android:id="@+id/ib_pre"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/main"
        android:scaleType="fitStart"
        android:src="@drawable/ic_pre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mypage_notice"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공지사항"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ib_pre" />
    <ImageView
        android:id="@+id/iv_bar4"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F8F8F8"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_notice"
        android:layout_marginTop="11dp"
        />

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_bar4"
        android:id="@+id/tv_notice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글 제목"
        android:textColor="@color/main"
        android:textSize="15sp"
        android:padding="13dp"/>


    <ImageView
        android:id="@+id/iv_bar5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        app:layout_constraintTop_toBottomOf="@+id/tv_notice_title"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/tv_notice_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_bar5"
        android:text="글 내용"
        android:textColor="@color/main"
        android:textSize="15sp"/>




</androidx.constraintlayout.widget.ConstraintLayout>